            <header>
                <div class="main-img">
                  <img src="<%= user.profile %>" alt="">
                </div>
                <div class="main-img-details">
                    <div class="r-1"><a class="r-1-a" href=""><h2><%= user.username %></h2><img class="r-1-img" src="data:image/jpeg;base64," alt=""></a>
                        <div class="r-1-1">
                            <% if (currUser && currUser._id.equals(user._id)){ %>
                                <span><a href="/user/<%= user._id %>/change"><button class="r-1-1-b1">Change</button></a></span>
                                <span><a href="/user/<%= user._id %>/newpost"><button class="r-1-1-b2">NewPost</button></a></span>
                            <% } else { %>
                                <% if (!exists) { %>
                                <form action="/user/<%= user._id %>" method="post"><span><button class="r-1-1-b1">Follow</button></span></form>
                                <%}else { %>
                                    <form action="/user/<%= user._id %>?_method=DELETE" method="post"><span><button class="r-1-1-b1" style="color: aliceblue;background-color: black; object-fit: cover;">Following</button></span></form>
                                <% } %>
                                <span><button class="r-1-1-b2">Message</button></span>
                            <% } %>
                            <span><button class="r-1-1-b3"><i class="fa-solid fa-user-plus"></i></button></span>
                        </div>
                        <span><i class="fa-solid fa-ellipsis _3dot"></i></span>

                    </div>
                    <div style="width:613.339px; height: 0; margin-bottom: 20px;"></div>
                    <ul class="r-2">
                        <li><span><%= user.nPost %></span> Posts</li>
                        <a href="/user/<%=user._id%>/followers"><li><span><%= user.nFollowers %></span> Followers</li></a>
                        <li><span> <%= user.nFollowing %></span> Following</li>
                    </ul>
                    <span style="color: white; font-size: 14px;font-weight: 600;letter-spacing: 10px;"><%= user.name %></span>
                </div>
            </header>
            <footer>
            <h1>POST</h1>
            <div class="posts">
                <div class="post-hide">
                <% for(post of user.post){%>
                <div class="post"><img class="post-img" src="<%=post.videourl%>" alt="">
                    <% if (currUser && currUser._id.equals(user._id)){ %>
                    <form method="post" action="/user/<%=user._id%>/delete/<%=post._id%>?_method=DELETE"><button>delete</button></form>
                    <%}%>
                </div><br>
                <%}%>
            </div></div></footer>
